rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Règles pour les utilisateurs
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Sous-collections SRS
      match /srsSettings/{document=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      match /srsExercises/{document=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      match /srsReviews/{document=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // Autres sous-collections
      match /{document=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // Règles pour les leçons (lecture publique, écriture admin)
    match /lessons/{lessonId} {
      allow read: if true;
      allow write: if request.auth != null; // À ajuster selon vos besoins
    }
    
    // Règles pour les achievements (lecture publique)
    match /achievements/{achievementId} {
      allow read: if true;
      allow write: if request.auth != null; // À ajuster selon vos besoins
    }
  }
}
